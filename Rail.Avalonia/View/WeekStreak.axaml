<UserControl xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        x:Class="Rail.Avalonia.View.WeekStreak"
        xmlns:v="clr-namespace:Rail.Avalonia.View">
    <Border Background="#567" CornerRadius="15" Width="350" Height="100">
        <Grid RowDefinitions="*, *">
            <TextBlock Grid.Row="0" Grid.Column="0" Text="Week Streak" Margin="15" />
            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Streak}" Margin="15" />
        </Grid>
    </Border>
</UserControl>